<h1><%= @vote.title %></h1>

<div class="questions">
<% @vote.questions.includes(:answers).each_with_index do |question, index| %>
  <div class="question">
    <div class="question-title">
      <%= index + 1 %>. <%= question.title %>
    </div>
    <div class="answers">
      <% question.answers.each do |answer| %>
        <div class="answer">
          <label>
            <input type="checkbox">
            <%= answer.title %>
          </label>
        </div>
      <% end -%>
      <input type="checkbox">
      <input type="text">
    </div>
  </div>
<% end -%>
<button class="btn btn-default btn-block">再加一题</button>
</div>

<button class="btn btn-primary btn-block">提交结果</button>
