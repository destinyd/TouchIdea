<h1>查看投票</h1>

<h2><%= @vote.title %></h2>

<div class="questions">
  <% @vote.questions.includes(:answers).each_with_index do |question, index| %>
    <div class="question">
      <div class="question-title">
        <%= index + 1 %>. <%= question.title %>
      </div>
      <div class="answers">
        <% question.answers.each do |answer| %>
          <div class="answer">
            <label>
              <input type="checkbox" disabled="disabled" <%= 'checked="checked"' if answer.answered_by?(current_user) %>>
              <%= answer.title %>
            </label>
          </div>
        <% end -%>
      </div>
    </div>
  <% end -%>
</div>

