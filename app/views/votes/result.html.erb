<h1>查看投票</h1>

<h2><%= @vote.title %></h2>

<div class="questions">
  <% @vote.questions.includes(:answers).each_with_index do |question, index| %>
    <div class="question">
      <div class="question-title">
        <%= index + 1 %>. <%= question.title %>
      </div>
      <div class="answers">
        <% question.answers.each do |answer| %>
          <% percent = (answer.users.count.to_f / @vote.invite_uids.count * 100).to_i %>
          <div class="col-xs-1 answer-select">
            <% if answer.answered_by?(current_user) %>
              √
            <% end %>
          </div>
          <div class="col-xs-10 answer-progress">
            <div class="progress">
              <div class="progress-bar" role="progressbar" aria-valuenow="<%= percent %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= percent %>%;">
                <span class="answers-result">
                  <%= answer.title %>
                </span>
              </div>
            </div>
          </div>
          <div class="col-xs-1 answer-percent">
            <%= '%d%' % percent %>
          </div>
          <div class="clearfix"></div>
        <% end -%>
      </div>
    </div>
  <% end -%>
</div>

