<%= simple_form_for [vote, Question.new],remote: true do |f| %>
  <div class="modal-body">
    <%= f.input :title %>
    <%= f.simple_fields_for :answers do |answer| %>
      <%= render "votes/answer_fields", :f => answer %>
    <% end -%>
    <div class="links">
      <%= link_to_add_association '再加一题', f, :answers, class: 'btn btn-default', partial: 'votes/answer_fields' %>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
    <%= f.button :submit, '提交', class: 'btn btn-primary' %>
  </div>
<% end %>

